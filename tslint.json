{
    "extends": "tslint:recommended",
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "rules": {
        "interface-name": false,
        "max-classes-per-file": false,
        "use-view-encapsulation": false,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "ordered-imports": [
            false
        ],
        "quotemark": [
            false
        ],
        "trailing-comma": [
            false
        ]
    }
}